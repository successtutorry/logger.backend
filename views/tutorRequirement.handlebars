<form class="form-signin" action="/users/posttutorRequirement" method="POST">
  <h2 class="form-signin-heading">Fill the details</h2>

 
  <label for="inputUsername" class="sr-only">Board</label>
  <input type="text" id="Board" name="board" class="form-control" placeholder="Board" required>

  <label for="inputUsersubject" class="sr-only">Subject</label>
  <input type="text" id="inputUsersubject" name="subject" class="form-control" placeholder="Subject" required>


  <label for="inputUserage" class="sr-only">City</label>
  <input type="text" id="city" name="city" class="form-control" placeholder="City" required>

  <label for="inputUserclass" class="sr-only">Grade</label>
  <input type="text" id="Grade" name="grade" class="form-control" placeholder="Grade" required>

  
  <br/>

