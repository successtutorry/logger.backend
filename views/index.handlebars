<!-- Jumbotron -->
<div class="jumbotron">
  <h1>Are you a Tutor ?</h1>
  <p class="lead">Register with us and start earning...</p>
  <p><a class="btn btn-lg btn-default" href="/users/register" role="button">Get Registered</a></p>
</div>

<h2>Tutor Requirements:</h2>

{{# each requirement}}
    
<div class="row">

{{# each this}}
<div class="col-lg-4">
  <h2>{{this.subject}}</h2></br>
  <p>Name: {{this.name}}</p></br>
  <p>Age: {{this.age}}</p></br>
  <p>Class: {{this.class}}</p></br>
  <p>Gender Preference: {{this.gender_preference}}</p></br>
  <p>Location Preference: {{this.location_preference}}</p></br>
  <pAvailability: {{this.availabletime}}</p></br>
  <p>Other Description: {{this.description}}</p></br>
  <p><a class="btn btn-default" href="#" role="button">View details &raquo;</a></p>
</div>
{{/each}}

</div>

{{/each}}

<h2>Available Tutors</h2>

{{# each tutor}}
    
<div class="row">

{{# each this}}
<div class="col-lg-4">
  <h2>Name: {{this.username}}</h2></br>
  <p>Email: {{this.email}}</p></br>
  <p><a class="btn btn-default" href="#" role="button">View details &raquo;</a></p>
</div>
{{/each}}

</div>

{{/each}}
